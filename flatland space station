#include<iostream>
#include<algorithm>

using namespace std;

int main()
{
    int i,n1,n2,j,k,t;
    
    cin>>n1>>n2;
    
    int a[n2],c[n1],d[n2];
    
    for(i=0;i<n2;i++)
    {
        cin>>a[i];
    }
    
    
    for(i=0;i<n1;i++)
    {
        for(k=0;k<n2;k++)
                {
                    if(i>a[k])
                    {
                        d[k]=(i-a[j]);
                    }
                    
                    else if(i<a[k])
                    {
                        d[k]=(a[i]-i);
                    }
                    
                    else
                    {
                        d[k]=0;
                    }
                    
                }
                
                 for(k=0;k<n2;k++)
                {
                    t=d[k];
                    if(d[k]>d[k+1])
                    {
                        d[k]=d[k+1];
                        d[k+1]=t;
                    }
                }
                
                c[i]=d[0];
                
    }

                 
                
                
    
      for(i=0;i<n2;i++)
        {
            t=c[i];
            if(c[i]>c[i+1])
            {
                c[i]=c[i+1];
                c[i+1]=t;
            }
            
            
        }
        
    cout<<c[n2-1];
      
    return 0;
    
}
