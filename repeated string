#include<iostream>
#include<string>
using namespace std;
int main()
{
    int n,e=0,i=0;
    
    string s;
    
    cin>>s;
    cin>>n;
    
    
    for(i=0;i<n;i++)
    {
        s+=s;
    }
    
    while (s[i] != '\0')
   
    {
        if(s[i] == 'a')
        {
           e++; 
        }
        
        i++;
    }
    
    cout<<e;
    
    return 0;

}
