#include<iostream>
#include<string>
using namespace std;
int main()
{
    long e=0,i=0,n,j=0,g=0,h=0;
    string s,f;
    
    cin>>s;
    
    while(s[i] != '\0')
    {
        
        i++;
    }
    
    g=i;
    
    cin>>n;
    
    h=n;
    
    n=((n/g)+1);
    
    
    
     f=s;
    
    for(i=0;i<n+1;i++)
    {
        
        s=(s+f);
    }
    
     
    while(j<h)
   
    {
        if(s[j]=='a')
        {
           e++; 
        }
        
        j++;
    }
    
    
    
    cout<<e;
    
    
    
    return 0;
    
    
}
