#include <bits/stdc++.h>
using namespace std;

int main()
{
    long long n,n1,i,j,a,b,c;
    cin>>n1;
    
    for(i=0;i<n1;i++)
    {
       cin>>n;
       
       if(n<=3)
       {
           if(n==1 || n==2)
           {
             cout<<1<<endl;
           }
           else if(n==3)
           {
             cout<<2<<endl;  
           }
       }
       else
       {
           cout<<n/2<<endl;
       }
    }
     
  
    return 0; //169102654
    // 92703079
    
}
