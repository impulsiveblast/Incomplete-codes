#include<iostream>
#include<string>
using namespace std;
int main()
{
    int p=0,i=0,b[26],j;
    
    
    for(i=0;i<26;i++)
    {
        cin>>b[i];
    }
    
    string s;
    cin>>s;
    
    i=0;
    
    while(s[i] != '\0')
    {
        
        p++;
    }
    
    
    
    int a[p];
    
    for(i=0;i<p;i++)
    {
        if(s[i]=='a')
        {
            a[i]=b[0];
        }
        
        else if(s[i]=='b')
        {
            a[i]=b[1];
        }
        
        else if(s[i]=='c')
        {
            a[i]=b[2];
        }
        
        else if(s[i]=='d')
        {
            a[i]=b[3];
        }
        
        else if(s[i]=='e')
        {
            a[i]=b[4];
        }
        
        else if(s[i]=='f')
        {
            a[i]=b[5];
        }
        
        else if(s[i]=='g')
        {
            a[i]=b[6];
        }
        
        else if(s[i]=='h')
        {
            a[i]=b[7];
        }
        
        else if(s[i]=='i')
        {
            a[i]=b[8];
        }
        
        else if(s[i]=='j')
        {
            a[i]=b[9];
        }
        
        else if(s[i]=='k')
        {
            a[i]=b[10];
        }
        
         else if(s[i]=='l')
        {
            a[i]=b[11];
        }
        
         else if(s[i]=='m')
        {
            a[i]=b[12];
        }
        
         else if(s[i]=='n')
        {
            a[i]=b[13];
        }
        
         else if(s[i]=='o')
        {
            a[i]=b[14];
        }
        
         else if(s[i]=='p')
        {
            a[i]=b[15];
        }
        
         else if(s[i]=='q')
        {
            a[i]=b[16];
        }
        
         else if(s[i]=='r')
        {
            a[i]=b[17];
        }
        
         else if(s[i]=='s')
        {
            a[i]=b[18];
        }
        
         else if(s[i]=='t')
        {
            a[i]=b[19];
        }
        
         else if(s[i]=='u')
        {
            a[i]=b[20];
        }
        
         else if(s[i]=='v')
        {
            a[i]=b[21];
        }
        
         else if(s[i]=='w')
        {
            a[i]=b[22];
        }
        
         else if(s[i]=='x')
        {
            a[i]=b[23];
        }
        
         else if(s[i]=='y')
        {
            a[i]=b[24];
        }
        
         else if(s[i]=='z')
        {
            a[i]=b[25];
        }
        
        else
        {
            a[i]=0;
        }
        
    }
    
    int t;
    for(i=0;i<p-1;i++)
    {
        for(j=0;j<p-i;j++)
        {
            if(a[j]>a[j+1])
            {
                t=a[j];
                
                a[j]=a[j+1];
                a[j+1]=t;
            }
        }
    }
    
    
    cout<<a[p-1]*p;
    
    
    return 0;
    
    
}
