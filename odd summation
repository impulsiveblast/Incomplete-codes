#include<bits/stdc++.h>
using namespace std;

int main()
{
    long long i,n,n1,k;
    cin>>n;
    
    
    for(i=0;i<n;i++)
    {
        cin>>n1>>k;
        
        if(((k%2==0) && (n1%2==0)  && (k<=(n1/2)) && (n1>=k*k)) || (k%2==1 && n1%2==1 && k<=((n1/2))  && (n1>=k*k)))
        {
                cout<<"YES"<<endl;
        }
        else
        {
            cout<<"NO"<<endl;
        }
        
    }
    
    return 0;
}
